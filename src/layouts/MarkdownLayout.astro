---
import "../styles/styles.css";
import BaseLayout from "./BaseLayout.astro";
import moment from 'moment';
const { frontmatter } = Astro.props;
const pageTitle = "My Astro Journey";

const fromNow = moment(frontmatter.pubDate).fromNow()
---
<!-- 
Install the "flowbite-typography" NPM package to apply styles and format the article content: 

URL: https://flowbite.com/docs/components/typography/ 
-->
<BaseLayout pageTitle={pageTitle}>
  <main
  class="min-h-dvh
 pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900 antialiased"
>
  <div class="flex justify-between px-4 mx-auto max-w-screen-xl">
    <article
      class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert"
    >
      <header class="mb-4 lg:mb-6 not-format">
        <address class="flex items-center mb-6 not-italic">
          <div
            class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white"
          >
            <img
              class="mr-4 w-16 h-16 rounded-full"
              src={frontmatter.image.url}
              alt={frontmatter.author}
            />
            <div>
              <a
                href="#"
                rel="author"
                class="text-xl font-bold text-gray-900 dark:text-white"
                >{frontmatter.author}</a
              >
              <p class="text-base text-gray-500 dark:text-gray-400">
                {frontmatter.occupation}
              </p>
              <p class="text-base text-gray-500 dark:text-gray-400">
                <time datetime="2022-02-08" title="February 8th, 2022"
                  >{fromNow}</time
                >
              </p>
            </div>
          </div>
        </address>
        <h1
          class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white"
        >
          {frontmatter.title}
        </h1>
      </header>
      <p class="lead">{frontmatter.introduction}</p>
      {
        frontmatter.description.map((description: string) => (
          <p>{description}</p>
        ))
      }

      <figure>
        <img
          src={frontmatter.image.url}
          alt={frontmatter.image.alt}
        />
      </figure>
      { frontmatter.road &&
        <>
            <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">What i've learned so far:</h1>
            <ol>
                {frontmatter.road.map((road: string) => <li>{road}</li>)}
            </ol>            
        </>    
        
    }
    </article>
    
  </div>
</main>
<slot />
</BaseLayout>

